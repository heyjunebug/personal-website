---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts #}
{% css %}{% include "node_modules/prism-themes/themes/prism-dracula.css" %}{% endcss %}
{% css %}{% include "public/css/prism-diff.css" %}{% endcss %}
{% css %}{% include "public/css/post.css" %}{% endcss %}

<h1>{{ title | addNbsp | safe }}</h1>

<div class="entry">
	<div class="left">
	<p class="metadata">
		Last updated
		<time class="postlist-date" datetime="{{ page.date | htmlDateString }}">
		{{ page.date | readableDate("LLLL dd yyyy") }}
		</time>
	</p>
	{% if tags %}
	<p class="metadata">Filed under</p>
		<ul class="postlist-metadata">
			{% for tag in tags | filterTagList | sort(false, false, tag) %}
			{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
			<li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{% if not loop.last %}, {% endif %}</li>
			{% endfor %}
		</ul>
	{% endif %}
	</div>
	
	<div class="right">
		{{ content | safe }}

		{% if collections.posts %}
		{% set previousPost = collections.posts | getPreviousCollectionItem %}
		{% set nextPost = collections.posts | getNextCollectionItem %}
		{% if nextPost or previousPost %}
		<ul class="links-nextprev">
			{% if previousPost %}<li>← Previous<br><a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
			{% if nextPost %}<li>Next →<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
		</ul>
		{% endif %}
		{% endif %}

	</div>

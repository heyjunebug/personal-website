{% if nextPost or previousPost %}
  <div class="links-nextprev">
    <div class="link-container">
      {% if previousPost %}
      <span class="prev">Older</span>
      <a href="{{ previousPost.url }}">{{ previousPost.data.title | safe }}</a>
      {% else %}
      <span class="prev oops">Oops!</span>
      <p>There’s nothing older.</p>
      {% endif %}
    </div>
    <div class="link-container">
      {% if nextPost %}
      <span class="next">Newer</span>
      <a href="{{ nextPost.url }}">{{ nextPost.data.title | safe }}</a>
      {% else %}
      <span class="next oops">Oops!</span>
      <p>There’s nothing newer.</p>
      {% endif %}
    </div>
  </div>
{% endif %}
---
layout: layouts/home.njk
numberOfLatestPostsToShow: 2
numberOfLatestBooksToShow: 3
eleventyNavigation:
  key: Home
  order: 1
eleventyExcludeFromCollections: false
---

{% set postsCount = collections.posts | length %}
{% set latestPostsCount = postsCount | min(numberOfLatestPostsToShow) %}
<h1>Welcome</h1>
<h2 class="postlist-category">Latest {{ latestPostsCount }} Post{% if latestPostsCount != 1 %}s{% endif %}</h2>

{% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
{% set postslistCounter = postsCount %}
{% include "postslist.njk" %}

{% set morePosts = postsCount - numberOfLatestPostsToShow %}
{% if morePosts > 0 %}
<div class="entry">
	<div class="left"></div>
	<div class="right">
	<p class="read-more">Read #1 â€“ #{{ morePosts }} in <a href="/blog/">the archive</a>.</p>
	</div>
</div>
{% endif %}

{% set bookCount = collections.books | length %}
{% set latestBooksCount = bookCount | min(numberOfLatestBooksToShow) %}

<h2 class="postlist-category">Last {{ latestBooksCount }} Book{% if latestBooksCount != 1 %}s{% endif %} Read</h2>

{% set booklist = collections.books | head(-1 * numberOfLatestBooksToShow) %}
{% set booklistCounter = bookCount %}
{% include "bookslist.njk" %}

{% set moreBooks = bookCount - numberOfLatestBooksToShow %}
{% if moreBooks > 0 %}
<div class="entry">
	<div class="left"></div>
	<div class="right">
	<p class="read-more">Read about {{ moreBooks }} more book{% if moreBooks != 1 %}s{% endif %} in <a href="/books/">the library</a>.</p>
	</div>
</div>
{% endif %}